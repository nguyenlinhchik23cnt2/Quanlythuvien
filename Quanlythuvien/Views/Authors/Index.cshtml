@model IEnumerable<Quanlythuvien.Models.Author>

@{
    ViewData["Title"] = "Tác Giả";
}

<style>
    body {
        background-color: #f8f9fa;
    }

    h1 {
        text-align: center;
        margin-top: 20px;
        color: #333;
    }

    table {
        border-collapse: collapse;
        width: 100%;
        background-color: white;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }

    th, td {
        border: 1px solid #dee2e6 !important;
        padding: 10px;
        text-align: center;
        vertical-align: middle !important;
    }

    thead {
        background-color: #007bff;
        color: white;
        font-weight: bold;
    }

    tr:nth-child(even) {
        background-color: #f9f9f9;
    }

    tr:hover {
        background-color: #f1f1f1;
        transition: 0.3s;
    }

    .btn {
        padding: 6px 12px;
        border-radius: 6px;
        font-size: 0.9rem;
        text-decoration: none;
    }

    .btn-success {
        background-color: #28a745;
        border: none;
        color: white;
    }

        .btn-success:hover {
            background-color: #218838;
        }

    .btn-primary {
        background-color: #007bff;
        border: none;
        color: white;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .btn-warning {
        background-color: #ffc107;
        border: none;
        color: black;
    }

        .btn-warning:hover {
            background-color: #e0a800;
            color: white;
        }

    .btn-danger {
        background-color: #dc3545;
        border: none;
        color: white;
    }

        .btn-danger:hover {
            background-color: #c82333;
        }
</style>
<!-- ✅ HẾT PHẦN CSS THÊM -->
<h2 class="mt-3">Danh Sách Tác Giả</h2>

<table class="table table-bordered mt-3">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.AuthorName)</th>
            <th>@Html.DisplayNameFor(model => model.Bio)</th>
            @if (User.IsInRole("Admin") || User.IsInRole("Librarian"))
            {
                <th>Thao tác</th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.AuthorName</td>
                <td>@item.Bio</td>
                @if (User.IsInRole("Admin") || User.IsInRole("Librarian"))
                {
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.AuthorId" class="btn btn-warning btn-sm">✏️ Sửa</a>
                        <a asp-action="Delete" asp-route-id="@item.AuthorId" class="btn btn-danger btn-sm">🗑Xóa</a>
                        <a asp-action="Details" asp-route-id="@item.AuthorId" class="btn btn-primary btn-sm">📘 Xem</a>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>

@if (User.IsInRole("Admin") || User.IsInRole("Librarian"))
{
    <p>
        <a asp-action="Create" class="btn btn-primary">Thêm Tác Giả</a>
    </p>
}
