@model List<Borrowed>

@{
    ViewData["Title"] = "Lịch sử mượn sách của sinh viên";
    var student = ViewBag.Student as Student;
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />

<style>
    body {
        background-color: #f8f9fa;
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
    }

    h2 {
        color: #002b5c;
        font-weight: 700;
        margin-bottom: 25px;
    }

    .card {
        border-radius: 12px;
        border: none;
        box-shadow: 0 3px 12px rgba(0, 0, 0, 0.08);
    }

    .card-header {
        background: linear-gradient(135deg, #002b5c, #004b9f);
        color: white;
        border-radius: 12px 12px 0 0 !important;
        padding: 15px 20px;
        font-weight: 600;
    }

    th, td {
        padding: 12px;
        text-align: center;
        vertical-align: middle;
    }

    thead {
        background-color: #002b5c;
        color: white;
    }

    tr:hover {
        background-color: #eef4ff;
    }

    .btn {
        border-radius: 8px;
        padding: 8px 18px;
        transition: all 0.25s ease;
    }

    .btn-secondary {
        background-color: #6c757d;
        border: none;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
            transform: translateY(-2px);
        }

    .badge {
        padding: 6px 12px;
        border-radius: 6px;
        font-size: 0.85rem;
    }

    .student-info {
        background-color: #ffffff;
        border-left: 4px solid #002b5c;
        padding: 15px;
        border-radius: 10px;
        margin-bottom: 20px;
    }

        .student-info strong {
            color: #002b5c;
        }
</style>

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-book-half"></i> Lịch sử mượn sách</h2>
        <a href="@Url.Action("SearchStudent")" class="btn btn-secondary">
            <i class="bi bi-arrow-left-circle"></i> Quay lại
        </a>
    </div>


    @if (student != null)
    {
        <div class="student-info">
            <div class="row mb-2">
                <div class="col-md-4"><strong><i class="bi bi-person"></i> Họ tên:</strong></div>
                <div class="col-md-8">@student.Fullname</div>
            </div>
            <div class="row mb-2">
                <div class="col-md-4"><strong><i class="bi bi-person-vcard"></i> Mã sinh viên:</strong></div>
                <div class="col-md-8">@student.StudentId</div>
            </div>
            <div class="row mb-2">
                <div class="col-md-4"><strong><i class="bi bi-envelope"></i> Email:</strong></div>
                <div class="col-md-8">@student.Email</div>
            </div>
        </div>
    }

    <!-- Danh sách mượn -->
    <div class="card">
        <div class="card-header">
            <i class="bi bi-list-check"></i> Danh sách mượn (@Model.Count)
        </div>
        <div class="card-body p-0">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover mb-0">
                        <thead>
                            <tr>
                                <th><i class="bi bi-hash"></i> Mã mượn</th>
                                <th><i class="bi bi-book"></i> Tên sách</th>
                                <th><i class="bi bi-calendar-date"></i> Ngày mượn</th>
                                <th><i class="bi bi-calendar-check"></i> Hạn trả</th>
                                <th><i class="bi bi-calendar2-x"></i> Ngày trả</th>
                                <th><i class="bi bi-info-circle"></i> Trạng thái</th>
                                <th><i class="bi bi-cash"></i> Phạt</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var borrow in Model)
                            {
                                <tr>
                                    <td>@borrow.BorrowId</td>
                                    <td>@borrow.Book?.Title</td>
                                    <td>@borrow.BorrowDate?.ToString("dd/MM/yyyy")</td>
                                    <td>@borrow.DueDate?.ToString("dd/MM/yyyy")</td>
                                    <td>@(borrow.ReturnDate?.ToString("dd/MM/yyyy") ?? "-")</td>
                                    <td>
                                        @switch (borrow.BookStatus)
                                        {
                                            case "Pending":
                                                <span class="badge bg-warning text-dark"><i class="bi bi-hourglass-split"></i> Chờ duyệt</span>
                                                break;
                                            case "Borrowed":
                                                <span class="badge bg-info text-dark"><i class="bi bi-book-half"></i> Đang mượn</span>
                                                break;
                                            case "Returned":
                                                <span class="badge bg-success"><i class="bi bi-check-circle"></i> Đã trả</span>
                                                break;
                                            case "Rejected":
                                                <span class="badge bg-danger"><i class="bi bi-x-circle"></i> Từ chối</span>
                                                break;
                                        }
                                    </td>
                                    <td>@borrow.FineAmount?.ToString("N0")₫</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <p class="text-muted text-center py-4">
                    <i class="bi bi-clipboard-x"></i> Không có dữ liệu mượn sách
                </p>
            }
        </div>
    </div>
</div>
