@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Quản Lý Thư Viện</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        :root {
            --main-bg: #002b5c;
            --main-text: #ffffff;
            --accent: #ffd966;
            --font-family: 'Inter', sans-serif;
        }

        body {
            font-family: var(--font-family);
            font-size: 15px;
            color: #212529;
            background-color: #f8fafc;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        /* Header & Navbar */
        .navbar {
            background-color: var(--main-bg) !important;
        }

        .navbar-brand span {
            font-weight: 600;
            font-size: 1.25rem;
            color: var(--main-text);
        }

        .navbar-brand img {
            height: 70px;
            width: auto;
            border-radius: 8px;
            margin-right: 10px;
            transition: transform 0.3s ease;
        }

            .navbar-brand img:hover {
                transform: scale(1.05);
            }

        .nav-link {
            color: var(--main-text) !important;
            font-weight: 500;
            transition: color 0.2s ease;
        }

            .nav-link:hover {
                color: var(--accent) !important;
            }

        .dropdown-menu {
            font-size: 14px;
        }

       /*  Sidebar */ */
        aside {
            background-color: #ffffff;
            border-right: 1px solid #dee2e6;
            min-height: 100%;
        }

            aside h6 {
                font-weight: 600;
                color: black;
            }

            aside .nav-link {
                color: #333;
                padding: 6px 0;
                font-size: 15px;
            }

                aside .nav-link:hover {
                    color: var(--main-bg);
                    background-color: #f2f6ff;
                    border-radius: 4px;
                }

    
        footer {
            background-color: var(--main-bg);
            color: var(--main-text);
            margin-top: auto;
            position: relative;
        }

            footer a {
                color: var(--accent);
                text-decoration: none;
            }

                footer a:hover {
                    text-decoration: underline;
                }

        .footer-bottom {
            background-color: #001d3d;
            font-size: 14px;
        }


        html, body {
            height: 100%;
        }

        main {
            flex-grow: 1;
        }

        .alert {
            font-size: 14px;
        }
    </style>

    @RenderSection("Styles", required: false)
</head> 
<body>
    <!-- Header -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom shadow-sm">
            <div class="container-fluid py-2">
                <!-- Logo -->
                <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
                    <img src="~/images/books/logo.png" alt="Logo Thư Viện"
                         class="me-2" style="height:100px; width:auto; border-radius:8px;">
                </a>

                <!-- Toggle button (mobile) -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Navbar links -->
                <div class="collapse navbar-collapse" id="navbarNav">
                    <!-- Left nav -->
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0 fs-5 fw-semibold">
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Trang Chủ</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Introduce">Giới Thiệu</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Resources">Tài Nguyên</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Contact">Liên Hệ</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Privacy">Bảo Mật</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="StudentCategories">Thể Loại</a></li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Borroweds" asp-action="MyBorrowedBooks">Sách đã mượn</a>
                        </li> 
                    </ul>
                    <!-- Right nav -->
                    <ul class="navbar-nav ms-auto">
                        @if (User.Identity != null && User.Identity.IsAuthenticated)
                        {
                            <!-- User dropdown -->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark fw-semibold" href="#" id="userMenu" role="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-person-circle me-1"></i> @User.Identity.Name
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userMenu">
                                    <li>
                                        <a class="dropdown-item" asp-controller="Auth" asp-action="Logout">
                                            <i class="bi bi-box-arrow-right me-2 text-danger"></i> Đăng Xuất
                                        </a>
                                    </li>
                                </ul>
                            </li>

                            <!-- Admin menu -->
                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item dropdown ms-2">
                                    <a class="nav-link dropdown-toggle text-dark fw-semibold" href="#" id="adminMenu" role="button" data-bs-toggle="dropdown">
                                        <i class="bi bi-gear me-1"></i> Quản Lý Admin
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="adminMenu">
                                        <li><a class="dropdown-item" asp-controller="Admins" asp-action="Index"><i class="bi bi-person-badge me-2"></i> Quản Lý Admin</a></li>
                                        <li><a class="dropdown-item" asp-controller="Librarians" asp-action="Index"><i class="bi bi-people me-2"></i> Quản Lý Thủ Thư</a></li>
                                        <li><a class="dropdown-item" asp-controller="Students" asp-action="Index"><i class="bi bi-person-lines-fill me-2"></i> Quản Lý Sinh Viên</a></li>
                                        <li><a class="dropdown-item" asp-controller="Books" asp-action="Index"><i class="bi bi-book me-2"></i> Quản Lý Sách</a></li>
                                        <li><a class="dropdown-item" asp-controller="Categories" asp-action="Index"><i class="bi bi-tags me-2"></i> Thêm Thể Loại</a></li>
                                        <li><a class="dropdown-item" asp-controller="Authors" asp-action="Index"><i class="bi bi-pen me-2"></i> Thêm Tác Giả</a></li>
                                    </ul>
                                </li>
                            }
                        }
                        else
                        {
                            <li class="nav-item"><a class="nav-link fw-semibold" asp-controller="Auth" asp-action="Login">Đăng Nhập</a></li>
                            <li class="nav-item"><a class="nav-link fw-semibold" asp-controller="Auth" asp-action="Register">Đăng Ký</a></li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main content with optional sidebar -->
    <div class="container-fluid flex-grow-1">
        <div class="row">
            <!-- Sidebar (optional static navigation for admin/librarian) -->
            @if (User.Identity != null && User.Identity.IsAuthenticated && User.IsInRole("Admin"))
            {
                <aside class="col-md-2 col-lg-2 d-none d-md-block bg-light border-end p-3">
                    <h6 class="text-uppercase fw-bold text-secondary mb-3">Bảng Điều Khiển</h6>
                    <ul class="nav flex-column">
                        <li class="nav-item mb-1"><a class="nav-link text-dark" asp-controller="Admins" asp-action="Index"><i class="bi bi-person-badge me-2"></i> Quản Lý Admin</a></li>
                        <li class="nav-item mb-1"><a class="nav-link text-dark" asp-controller="Librarians" asp-action="Index"><i class="bi bi-people me-2"></i> Thủ Thư</a></li>
                        <li class="nav-item mb-1"><a class="nav-link text-dark" asp-controller="Students" asp-action="Index"><i class="bi bi-person-lines-fill me-2"></i> Sinh Viên</a></li>
                        <li class="nav-item mb-1"><a class="nav-link text-dark" asp-controller="Books" asp-action="Index"><i class="bi bi-book me-2"></i> Sách</a></li>
                        <li class="nav-item mb-1"><a class="nav-link text-dark" asp-controller="Categories" asp-action="Index"><i class="bi bi-tags me-2"></i> Thể Loại</a></li>
                        <li class="nav-item mb-1"><a class="nav-link text-dark" asp-controller="Authors" asp-action="Index"><i class="bi bi-pen me-2"></i> Tác Giả</a></li>
                    </ul>
                </aside>
            }

            <!-- Main content -->
            <main role="main" class="col px-4 py-3">
                @if (TempData["Message"] != null)
                {
                    <div class="alert alert-success">@TempData["Message"]</div>
                }

                @if (!ViewData.ModelState.IsValid && ViewData.ModelState.ErrorCount > 0)
                {
                    <div class="alert alert-danger">
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <p>@error.ErrorMessage</p>
                        }
                    </div>
                }

                @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                {
                    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
                }

                @RenderBody()
            </main>
        </div>
    </div>

    <!-- FOOTER -->
    <footer class="pt-5">
        <div class="container pb-4">
            <div class="row text-light">
                <div class="col-md-4 mb-4">
                    <h5 class="fw-semibold mb-3">Về hệ thống</h5>
                    <p>Hệ thống quản lý thư viện giúp sinh viên, thủ thư và quản trị viên dễ dàng tra cứu, quản lý, và mượn sách nhanh chóng.</p>
                </div>
                <div class="col-md-4 mb-4">
                    <h5 class="fw-semibold mb-3">Liên hệ</h5>
                    <p><i class="bi bi-geo-alt"></i> 123 Đường Sách, Quận 1, TP.HCM</p>
                    <p><i class="bi bi-telephone"></i> (028) 1234 5678</p>
                    <p><i class="bi bi-envelope"></i> support@library.vn</p>
                </div>
                <div class="col-md-4 mb-4">
                    <h5 class="fw-semibold mb-3">Theo dõi</h5>
                    <a href="#" class="text-light me-3"><i class="bi bi-facebook fs-4"></i></a>
                    <a href="#" class="text-light me-3"><i class="bi bi-instagram fs-4"></i></a>
                    <a href="#" class="text-light"><i class="bi bi-twitter fs-4"></i></a>
                </div>
            </div>
        </div>
        <div class="footer-bottom text-center py-3">
            &copy; @DateTime.Now.Year - Hệ thống quản lý thư viện | Thiết kế bởi Nhóm QLTV
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>