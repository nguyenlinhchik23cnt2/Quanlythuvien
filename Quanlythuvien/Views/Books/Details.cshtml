@model Quanlythuvien.Models.Book

@{
    ViewData["Title"] = "Chi tiết sách";
}

<h2 class="text-center mb-4">Chi tiết sách</h2>

<div class="card shadow-sm mx-auto" style="width: 28rem;">
    <div class="text-center mt-3">
        @if (!string.IsNullOrEmpty(Model.ImagePath))
        {
            <img src="@Url.Content(Model.ImagePath)" alt="@Model.Title" style="width:200px; height:auto;" />
        }
        else
        {
            <p><i>Không có ảnh</i></p>
        }
    </div>

    <div class="card-body">
        <h4 class="card-title text-primary">@Model.Title</h4>
        <p><strong>Năm xuất bản:</strong> @Model.YearPublished</p>
        <p><strong>Số lượng:</strong> @Model.Quantity</p>
        <p><strong>Mô tả:</strong> @Model.Description</p>
        <p><strong>Vị trí:</strong> @Model.Location</p>
        <p><strong>Tình trạng:</strong> @Model.Status</p>
        <p><strong>Nhà xuất bản:</strong> @Model.Publisher?.PublisherId</p>

        @if (!string.IsNullOrEmpty(Model.DownloadLink))
        {
            <p>
                <strong>File sách:</strong>
                <a href="@Model.DownloadLink" target="_blank">Tải xuống</a>
            </p>
        }

        <div class="mt-4 d-flex justify-content-between">
            <!-- Nút mượn sách -->
            <a asp-controller="Borrow" asp-action="Create" asp-route-bookId="@Model.BookId" class="btn btn-success">
                📚 Mượn sách
            </a>

            <!-- Nút quay lại -->
            <a asp-action="Index" class="btn btn-secondary">⬅️ Quay lại</a>
        </div>
    </div>
</div>
