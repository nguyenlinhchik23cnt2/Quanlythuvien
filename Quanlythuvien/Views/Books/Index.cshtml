@model IEnumerable<Quanlythuvien.Models.Book>
@{
    ViewData["Title"] = "Danh sách sách";
}

<style>
    body {
        background-color: #f4f6f8;
        font-family: "Segoe UI", Arial;
    }

    .container {
        max-width: 1100px;
        margin: 40px auto;
        background: #fff;
        border: 1px solid #ddd;
        border-radius: 10px;
        padding: 25px 35px;
        box-shadow: 0 3px 8px rgba(0,0,0,0.05);
    }

    h2 {
        text-align: center;
        color: #1b4d89;
        margin-bottom: 25px;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        text-align: left;
    }

    th, td {
        border: 1px solid #ddd;
        padding: 10px 12px;
    }

    th {
        background: #f2f2f2;
        color: #333;
    }

    tr:nth-child(even) {
        background: #fafafa;
    }

    tr:hover {
        background: #eef4ff;
    }

    .actions {
        display: flex;
        gap: 6px;
        justify-content: center;
    }

    .btn {
        padding: 6px 14px;
        border: none;
        border-radius: 6px;
        cursor: pointer;
        font-size: 14px;
        transition: 0.2s;
    }

    .btn-add {
        background-color: #1b4d89;
        color: white;
    }

        .btn-add:hover {
            background-color: #163b67;
        }

    .btn-edit {
        background-color: #f39c12;
        color: white;
    }

        .btn-edit:hover {
            background-color: #d68910;
        }

    .btn-delete {
        background-color: #c0392b;
        color: white;
    }

        .btn-delete:hover {
            background-color: #a93226;
        }

    .btn-detail {
        background-color: #2980b9;
        color: white;
    }

        .btn-detail:hover {
            background-color: #2471a3;
        }
</style>

<div class="container">
    <h2>📚 Danh sách sách</h2>
    <div style="text-align:right;margin-bottom:15px;">
        <a asp-action="Create" class="btn btn-add">➕ Thêm sách</a>
    </div>

    <table>
        <thead>
            <tr>
                <th>Ảnh</th>
                <th>Tên sách</th>
                <th>NXB</th>
                <th>Năm XB</th>
                <th>Số lượng</th>
                <th>Thể loại</th>
                <th>Trạng thái</th>
                <th style="text-align:center;">Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model)
            {
                <tr>
                    <td>
                        @if (!string.IsNullOrEmpty(book.ImagePath))
                        {
                            <img src="@book.ImagePath" alt="Ảnh bìa" style="height:60px;border-radius:6px;">
                        }
                        else
                        {
                            <span style="color:#888;">Không có ảnh</span>
                        }
                    </td>
                    <td>@book.Title</td>
                    <td>@book.Publisher.PublisherId</td>
                    <td>@book.YearPublished</td>
                    <td>@book.Quantity</td>
                    <td>
                        @if (book.BookCategories?.Any() == true)
                        {
                            @string.Join(", ", book.BookCategories.Select(c => c.Categories?.CateName))
                        }
                        else
                        {
                            <span style="color:#888;">Chưa phân loại</span>
                        }
                    </td>
                    <td>
                        @if (book.Status)
                        {
                            <span style="color:green;">✔ Còn</span>
                        }
                        else
                        {
                            <span style="color:red;">✖ Hết</span>
                        }
                    </td>
                    <td>
                        <div class="actions">
                            <a asp-action="Details" asp-route-id="@book.BookId" class="btn btn-detail">👁 Xem</a>
                            <a asp-action="Edit" asp-route-id="@book.BookId" class="btn btn-edit">✏ Sửa</a>
                            <a asp-action="Delete" asp-route-id="@book.BookId" class="btn btn-delete">🗑 Xóa</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
