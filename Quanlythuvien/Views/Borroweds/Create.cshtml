@model Quanlythuvien.Models.Borrowed

@{
    ViewData["Title"] = "Mượn sách";
}

<h2 class="text-center mb-4">Mượn sách</h2>

<div class="card shadow-sm p-4 mx-auto" style="max-width: 500px;">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group mb-3">
            <label asp-for="StudentId" class="control-label">Sinh viên</label>
            <select asp-for="StudentId" class="form-control" asp-items="ViewBag.StudentId"></select>
        </div>

        <div class="form-group mb-3">
            <label asp-for="BookId" class="control-label">Sách</label>
            <select asp-for="BookId" class="form-control" asp-items="ViewBag.BookId"></select>
        </div>

        <div class="form-group mb-3">
            <label asp-for="DueDate" class="control-label">Ngày hẹn trả</label>
            <input asp-for="DueDate" class="form-control" type="date" />
            <span asp-validation-for="DueDate" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="ReturnDate" class="control-label">Ngày trả (nếu có)</label>
            <input asp-for="ReturnDate" class="form-control" type="date" />
            <span asp-validation-for="ReturnDate" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="LibraId" class="control-label">Thủ thư</label>
            <select asp-for="LibraId" class="form-control" asp-items="ViewBag.LibraId"></select>
        </div>

        <div class="form-group mb-3">
            <label asp-for="BookStatus" class="control-label">Tình trạng sách</label>
            <input asp-for="BookStatus" class="form-control" />
            <span asp-validation-for="BookStatus" class="text-danger"></span>
        </div>

        <div class="form-group text-center mt-4">
            <input type="submit" value="📘 Xác nhận mượn" class="btn btn-success px-4" />
            <a asp-action="Index" class="btn btn-secondary ms-2">⬅️ Quay lại</a>
        </div>
    </form>
</divz

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
