@model IEnumerable<Quanlythuvien.Models.Borrowed>

@{
    ViewData["Title"] = "Index";
}

<!-- ✅ PHẦN CSS THÊM -->
<style>
    body {
        background-color: #f8f9fa;
    }

    h1 {
        text-align: center;
        margin-top: 20px;
        color: #333;
        font-weight: bold;
    }

    table {
        border-collapse: collapse;
        width: 100%;
        background-color: white;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }

    th, td {
        border: 1px solid #dee2e6 !important;
        padding: 10px;
        text-align: center;
        vertical-align: middle !important;
    }

    thead {
        background-color: #007bff;
        color: white;
        font-weight: bold;
    }

    tr:nth-child(even) {
        background-color: #f9f9f9;
    }

    tr:hover {
        background-color: #f1f1f1;
        transition: 0.3s;
    }

    .btn {
        padding: 6px 12px;
        border-radius: 6px;
        font-size: 0.9rem;
        text-decoration: none;
        color: white;
    }

    .btn-success {
        background-color: #28a745;
    }

        .btn-success:hover {
            background-color: #218838;
        }

    .btn-primary {
        background-color: #007bff;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .btn-warning {
        background-color: #ffc107;
        color: black;
    }

        .btn-warning:hover {
            background-color: #e0a800;
            color: white;
        }

    .btn-danger {
        background-color: #dc3545;
    }

        .btn-danger:hover {
            background-color: #c82333;
        }
</style>
<!-- ✅ HẾT PHẦN CSS THÊM -->






<!-- ✅ Bộ lọc Gmail -->
<form method="get" asp-action="Index" class="mb-3">
    <div class="input-group" style="max-width: 400px; margin: 0 auto 20px auto;">
        <input type="text"
               name="gmail"
               class="form-control"
               placeholder="Nhập Gmail để lọc..."
               value="@ViewBag.CurrentGmail" />
        <button type="submit" class="btn btn-primary">Lọc</button>
        <a asp-action="Index" class="btn btn-secondary">🔄 Xóa lọc</a>
    </div>
</form>

@if (!string.IsNullOrEmpty(ViewBag.CurrentGmail))
{
    <p class="text-center">
        <strong>Đang lọc theo Gmail:</strong> @ViewBag.CurrentGmail <br />
        <strong>Tổng số phiếu mượn:</strong> @Model.Count()
    </p>
}
<!-- ✅ Hết phần bộ lọc Gmail -->
<!-- ✅ PHẦN TỔNG HỢP SÁCH MƯỢN THEO GMAIL -->
@if (!string.IsNullOrEmpty(ViewBag.CurrentGmail))
{
    var grouped = Model
        .GroupBy(b => new { b.Student?.Email, b.Student?.Fullname })
        .Select(g => new
        {
            Gmail = g.Key.Email,
            FullName = g.Key.Fullname,
            Total = g.Count(),
            Books = g.Select(x => x.Book?.Title).Distinct().ToList()
        })
        .ToList();

    if (grouped.Any())
    {
       

        <table class="table table-bordered table-hover mt-3 text-center">
            <thead class="table-dark">
                <tr>
                    <th>Gmail</th>
                    <th>Tên người mượn</th>
                    <th>Tổng số sách</th>
                    <th>Danh sách sách đã mượn</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var g in grouped)
                {
                    <tr>
                        <td>@g.Gmail</td>
                        <td>@g.FullName</td>
                        <td>@g.Total</td>
                        <td>
                            <ul class="list-unstyled">
                                @foreach (var title in g.Books)
                                {
                                    <li>📘 @title</li>
                                }
                            </ul>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="text-center text-muted mt-3">Không tìm thấy sách nào cho Gmail này.</p>
    }
}

<p class="text-end">
    <a asp-action="Create" class="btn btn-success">➕ Thêm Phiếu Mượn</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.BorrowDate)</th>
            <th>@Html.DisplayNameFor(model => model.DueDate)</th>
            <th>@Html.DisplayNameFor(model => model.ReturnDate)</th>
            <th>@Html.DisplayNameFor(model => model.FineAmount)</th>
            <th>@Html.DisplayNameFor(model => model.BookStatus)</th>
            <th>@Html.DisplayNameFor(model => model.Status)</th>
            <th>@Html.DisplayNameFor(model => model.Book)</th>
            <th>@Html.DisplayNameFor(model => model.Libra)</th>
            <th>@Html.DisplayNameFor(model => model.Student)</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.BorrowDate)</td>
                <td>@Html.DisplayFor(modelItem => item.DueDate)</td>
                <td>@Html.DisplayFor(modelItem => item.ReturnDate)</td>
                <td>@Html.DisplayFor(modelItem => item.FineAmount)</td>
                <td>@Html.DisplayFor(modelItem => item.BookStatus)</td>
                <td>@Html.DisplayFor(modelItem => item.Status)</td>
                <td>@Html.DisplayFor(modelItem => item.Book.BookId)</td>
                <td>@Html.DisplayFor(modelItem => item.Libra.LibraId)</td>
                <td>@Html.DisplayFor(modelItem => item.Student.StudentId)</td>
                <td>@item.Student?.Fullname</td>
                <td>@item.Student?.Email</td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.BorrowId" class="btn btn-warning btn-sm">✏️ Sửa</a>
                    <a asp-action="Details" asp-route-id="@item.BorrowId" class="btn btn-primary btn-sm">🔍 Xem</a>
                    <a asp-action="Delete" asp-route-id="@item.BorrowId" class="btn btn-danger btn-sm">🗑️ Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
